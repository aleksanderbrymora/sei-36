<h1>All Artists</h1>


<% @artists.each do |artist| %>
  <%= image_tag artist.image, :class => 'thumb' if artist.image.present? %>
  <ul>
    <li>Name: <%= link_to artist.name, artist %></li> <!-- artist_path(artist.id) | artist_path(artist) -->
    <li>Nationality: <%= artist.nationality %></li>
    <li>Date of Birth: <%= artist.dob.strftime '%A, %B, %e, %Y' if artist.dob.present? %></li>
    <li>Period: <%= artist.period %></li>
  </ul>
<% end %>
