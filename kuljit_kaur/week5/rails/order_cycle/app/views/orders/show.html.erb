<h1><%= @order.item %></h1>

<ul>
  <li>Item: <%= @order.item %></li>
  <% if @order.customer.present? %>
    <li>Customer: <%= link_to @order.customer.name, @order.customer %></li>
    <li>Quantity: <%= @order.quantity %></li>
    <li>Order Date: <%= @order.order_date.strftime '%A, %B %e, %Y' if @order.order_date.present? %></li>
    <li>Price $<%= @order.price %></li>
  <% end %>
</ul>

<div class="controls">
  <%= link_to "Edit order", edit_order_path(@order) %>
  <%= link_to "Delete order", @order, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
