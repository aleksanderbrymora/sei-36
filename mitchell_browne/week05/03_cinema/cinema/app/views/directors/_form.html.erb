<%= form_for @director do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>
  <%= f.label :nationality %>
  <%= f.text_field :nationality %>
  <%= f.label :dob, 'Date of Birth' %>
  <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
  <%= f.label :oscars, 'Oscars Won' %>
  <%= f.text_field :oscars %>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>

  <%= f.submit %>
<% end %>
