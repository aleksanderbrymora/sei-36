<h2><%= @pokemon["name"] %></h2>
<h3>Type:<%= @pokemon["type"] %></h3>
<% unless @pokemon["image"].nil? || @pokemon["image"].empty? %>
<img src="<%= @pokemon["image"] %>" alt="<%= @pokemon["name"] %>">

<% end %>


<div class="controls">
  <a href="/pokemons/<%= @pokemon["id"] %>/edit">Edit</a>
  <a href="/pokemons/<%= @pokemon["id"] %>/delete">Delete</a>
</div>
