<h2><%= @guitar["brand"] %></h2>
<div class="row align-items-center justify-content-center"">
    <div class="image-holder row align-items-center justify-content-center">
        <% if !@guitar["image"] %>
            <a href="">Upload</a>
        <% else %>
            <img src="<%= @guitar["image"] %>">
        <% end %>
    </div>
</div>
<p><%= @guitar["model"] %></p>

<div class="row justify-content-center control">
    <a href="/guitars/<%= @guitar["id"] %>/edit" class="btn btn-outline-primary">Edit</a>
    <a href="/guitars/<%= @guitar["id"] %>/delete" class="btn btn-outline-primary">Delete</a>
</div>