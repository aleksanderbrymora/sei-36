<form action="/guitars/<%= @guitar["id"] %>" method="post">
    <div class="form-group">
        <label for="brand" class="">Brand</label>
        <input type="text" class="form-control" name="brand" value="<%= @guitar["brand"] %>">
    </div>
    <div class="form-group">
        <label for="model">Model</label>
        <input type="text" class="form-control" name="model" value="<%= @guitar["model"] %>">
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input type="text" class="form-control" name="image" value="<%= @guitar["image"] %>">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
