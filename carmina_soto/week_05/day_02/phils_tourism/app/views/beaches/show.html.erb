<h2><%= @beach.name %></h2>
<div class="controls">
<%= link_to "Edit Beach", edit_beach_path(@beach.id) %>
<%= button_to 'Delete Beach', beach_path(@beach.id), :method => 'delete' %>
</div>

<ul>
  <li>Location: <%= @beach.location  %></li>
  <li>Area: <%= number_to_human @beach.area, units: {unit: 'km&sup2'.html_safe} %></li>
  <li>Tourists as of 2019: <span title="<%= number_with_delimiter @beach.tourists %>"><%= number_to_human @beach.tourists %></span></li>
</ul>

<%= image_tag @beach.image, :class => 'feature' if @beach.image.present? %>
