<h2>Edit <%= @mountain.name %></h2>

<form class="form" action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>
    Name
    <input type="text" name="name" value="<%= @mountain.name %>">
  </label>

  <label>
    Image
    <input type="url" name="image" value="<%= @mountain.image %>">
  </label>

  <label>
    Location
    <input type="text" name="location" value="<%= @mountain.location %>">
  </label>

  <label>
    Elevation
    <input type="number" name="elevation" value="<%= @mountain.elevation %>">
  </label>

  <label>
    Year of First Ascent
    <input type="number" name="first_ascent" value="<%= @mountain.first_ascent %>">
  </label>

  <label>
    First Ascender
    <input type="text" name="first_ascender" value="<%= @mountain.first_ascender %>">
  </label>

  <label>
    Google Rating
    <input type="number" name="google_rating" value="<%= @mountain.google_rating %>">
  </label>
  <button class="form_button">Update Mountain</button>
</form>
