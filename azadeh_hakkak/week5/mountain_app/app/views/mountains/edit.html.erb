<h2>Edit Mountain</h2>

<form action="<%= mountain_path(@mountain.id) %>" method="post">

  <label>
    Name:
    <input name="name" required value="<%= @mountain.name %>">
  </label>
  <label>
    Elevation:
    <input type="number" required value="<%= @mountain.elevation %>">
  </label>
  <label>
    Location:
    <input name="location" required value="<%= @mountain.location %>">
  </label>
  <label>
    First ascent:
    <input name="first_ascent" value="<%= @mountain.first_ascent %>">
  </label>
  <label>
    Image:
    <input type="url" name="image" value="<%= @mountain.image %>">
  </label>

  <button>Save</button>
</form>
