<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>
  <%= f.label :Country %>
  <%= f.text_field :country %>
  <%= f.label :City %>
  <%= f.text_field :city %>
  <%= f.label :Postal_Code %>
  <%= f.text_field :postal_code %>
  <%= f.label :Street %>
  <%= f.text_field :street %>
  <%= f.label :Photo %>
  <%= f.url_field :image %>
<%= f.submit %>
<% end %>
